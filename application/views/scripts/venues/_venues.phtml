			if ($venue->getWebsite())
			{
				?>
				Website: <a href='<?php echo $venue->getWebsite() ?>'><?php echo $venue->getWebsite() ?></a><br/>
				<?php
			}
			?>
			</div>
<?php 
		}
	}
	else
	{
		?>
