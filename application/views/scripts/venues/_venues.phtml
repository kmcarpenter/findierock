	if ($this->hasVenues)
	{
		foreach($this->venues as $venue)
		{
?>
			<div>
			<h3><a href="<?= $this->url( array( "name" => $venue->getSlug() ), "venueslug" ) ?>" title="View this venue's info"><?= $venue->getName() ?></a></h3>
